<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="asteroid"
            type="com.udacity.asteroidradar.Asteroid" />

        <variable
            name="asteroidCallback"
            type="com.udacity.asteroidradar.main.MainFragment.AsteroidClick" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/itemLayout_general_padding">
    <TextView
        android:id="@+id/asteroid_main_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"

        android:textColor="@color/default_text_color"
        tools:text="the best"
        android:text="@{asteroid.codename}"
        android:textSize="@dimen/main_text_size"/>

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="shit, nigga"
            android:textColor="@color/text_grey"
            android:text="@{asteroid.closeApproachDate}"
            android:layout_below="@id/asteroid_main_info"
            android:textSize="@dimen/date_text_size"/>

        <ImageView
            android:id="@+id/hazardous_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"/>
    </RelativeLayout>

</layout>